<div class="container" style="text-align:center;">
  <%= form_for resource, as: resource_name, url: session_path(resource_name),
                         class: 'form-signin' do |f| %>

    <h2 class="form-signin-heading">Sign In</h2><br />

    <div class="form-inline">
      <%= f.label :login, 'Username or Email', class: 'control-label' %><br />
      <%= f.text_field :login, autofocus: true, class: 'form-control', 
                               placeholder: 'Username or Email' %></div><br />
    <div class="form-inline">
      <%= f.label :password, 'Password', class: 'control-label' %><br />
      <%= f.password_field :password, placeholder: 'Password', 
          class: 'form-control', autocomplete: 'off' %></div><br />

    <%= f.button 'Sign in', class: 'btn btn-lg btn-primary' %><br /><br />

    <% if devise_mapping.rememberable? %>
      <label>
        <%= f.check_box :remember_me %> <%= f.label :remember_me %>
      </label><% end %><% end %>

  <%= render 'devise/shared/links' %>
</div>